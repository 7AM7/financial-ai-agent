# Backend API URL for CopilotKit (server-side Next.js API route)
# Use 'backend' when running in Docker, 'localhost' when running locally
# Docker: http://backend:8000/copilotkit
# Local:  http://localhost:8000/copilotkit
REMOTE_ACTION_URL=http://backend:8000/copilotkit

# Backend API URL for client-side requests (browser)
# Always use 'localhost' as the browser runs on your host machine
NEXT_PUBLIC_API_URL=http://localhost:8000

# Azure OpenAI Configuration (required for CopilotKit non-agent features)
# Used for useCopilotAction, useCopilotReadable, etc.
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Optional: LangSmith API Key (for LangGraph Platform deployments)
# LANGSMITH_API_KEY=your_langsmith_api_key_here
